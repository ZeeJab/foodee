<ul class='errors'>
  <% @dish.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<%= form_for @dish do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :cost %>
    <%= f.number_field :cost %>
  </div>
  <br>
  <div class="field">
    <%= f.label :photo %>
    <%= f.text_field :photo %>
  </div>
  <br>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>